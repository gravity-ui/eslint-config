{
  "name": "@gravity-ui/eslint-config",
  "version": "3.0.0",
  "description": "Gravity UI ESLint config, following our styleguide",
  "keywords": [
    "eslint",
    "config"
  ],
  "license": "MIT",
  "main": "index.js",
  "files": [
    "a11y.js",
    "base.js",
    "client.js",
    "react.js",
    "server.js",
    "prettier.js",
    "constants.js",
    "order.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/eslint-config"
  },
  "bugs": {
    "url": "https://github.com/gravity-ui/eslint-config/issues"
  },
  "homepage": "https://github.com/gravity-ui/eslint-config#readme",
  "scripts": {
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 0",
    "lint": "npm run lint:js && npm run lint:other",
    "lint:js": "eslint . --report-unused-disable-directives",
    "lint:other": "npm run prettier -- --check",
    "prettier": "prettier '**/*.{md,yaml,yml,json}'"
  },
  "dependencies": {
    "@babel/core": "^7.22.0",
    "@babel/eslint-parser": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@gravity-ui/prettier-config": "^1.1.0",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "prettier": "^3.0.3"
  },
  "peerDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "nano-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet --report-unused-disable-directives"
    ],
    "*.{md,yaml,yml,json}": [
      "prettier --write"
    ]
  }
}
