{
  "name": "@gravity-ui/eslint-config",
  "version": "4.0.0",
  "description": "Gravity UI ESLint config, following our styleguide",
  "keywords": [
    "eslint",
    "config"
  ],
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "files": [
    "a11y.js",
    "base.js",
    "client.js",
    "constants.js",
    "import-order.js",
    "prettier.js",
    "react.js",
    "server.js",
    "typescript.js"
  ],
  "exports": {
    ".": "./index.js",
    "./a11y": "./a11y.js",
    "./base": "./base.js",
    "./client": "./client.js",
    "./import-order": "./import-order.js",
    "./prettier": "./prettier.js",
    "./react": "./react.js",
    "./server": "./server.js",
    "./typescript": "./typescript.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/eslint-config"
  },
  "bugs": {
    "url": "https://github.com/gravity-ui/eslint-config/issues"
  },
  "homepage": "https://github.com/gravity-ui/eslint-config#readme",
  "scripts": {
    "prepare": "husky",
    "test": "echo \"Error: no test specified\" && exit 0",
    "lint": "npm run lint:js && npm run lint:prettier",
    "lint:js": "eslint . --report-unused-disable-directives --flag unstable_config_lookup_from_file",
    "lint:prettier": "npm run prettier -- --check",
    "prettier": "prettier '**/*.{md,yaml,yml,json}'"
  },
  "dependencies": {
    "@babel/core": "^7.26.10",
    "@babel/eslint-parser": "^7.27.0",
    "@babel/preset-react": "^7.26.3",
    "@eslint/js": "^9.23.0",
    "@stylistic/eslint-plugin-ts": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@gravity-ui/prettier-config": "^1.1.0",
    "eslint": "^9.24.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0"
  },
  "peerDependencies": {
    "prettier": "^3.0.0",
    "typescript": "^5.8.3"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "nano-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet --report-unused-disable-directives"
    ],
    "*.{md,yaml,yml,json}": [
      "prettier --write"
    ]
  }
}
